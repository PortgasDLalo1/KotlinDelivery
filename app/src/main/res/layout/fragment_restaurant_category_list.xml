<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".fragments.restaurant.categories.RestaurantCategoryListFragment">

    <include layout="@layout/action_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="20dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_categories_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/abrirFormCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Agrega una categoria"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="70dp"/>


    </LinearLayout>

    <View
        android:id="@+id/view_transparent"
        android:background="#52666666"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/linearCategory"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardElevation="10dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnCerrarlayout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese los datos de la categoria"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imageview_category"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_image"
                    android:background="@color/gray_light"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/edittext_category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nombre de la categoria"
                android:background="@drawable/edittext_custom"
                android:layout_margin="20dp"
                android:padding="15dp"
                android:inputType="text"/>

            <Button
                android:id="@+id/btn_create_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/rounded_button"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_category_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_simple"
        app:backgroundTint="@color/green"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="70dp"
        android:visibility="gone"/>

</RelativeLayout>